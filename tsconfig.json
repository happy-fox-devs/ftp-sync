{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES6",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
